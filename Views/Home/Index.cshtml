@model List<Book>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-10 text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Here are our books :</p>
        </div>
        <div class="col-2 pt-5">
             <a class="btn btn-outline-success btn-lg" asp-controller="Cart" asp-action="Index">Cart</a>
        </div>
    </div>
</div>

<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Price</td>
                    <td>
                        <a class="btn btn-success btn-sm p-lg-1" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id">Add to cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>